<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.zzspringboot.mapper.CustomerinfoMapperCustomer" >

  <select id="getCustomerinfoById" resultType="com.example.zzspringboot.pojo.Customerinfo" parameterType="int">
    select ci.c_name as cName from customerinfo ci where ci.c_id=#{id}
  </select>

</mapper>